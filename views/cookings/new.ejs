<% include ../partials/header%>
<div class="container">
        <h4 class="mt-5 text-center text-info">Create New Recipe</h4>
    <div class="row">
           
            <div style="width:50%" class="my-3 mx-auto">
                    <form action="/cookings" method="POST">
                        <div class="form-group">
                            <!-- <label for="chef">Chef:</label> -->
                            <input class="form-control" id="chef" type="text" name="chef" placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="title">To Prepare:</label> -->
                            <input class="form-control" id="title" type="text" name="title" placeholder="Title of Recipe" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="ingridients">Ingridients:</label> -->
                            <input  class="form-control" id="ingridients" type="text" name="ingridients" placeholder="Ingridients" required>
                        </div>
                        <div class="form-group">
                            <!-- <label for="procedure">Procedure:</label> -->
                            <textarea class="form-control" id="procedure" name="procedure" placeholder="Procedure" rows="5" required></textarea> 
                        </div>
                        <button class="btn btn-secondary btn-block">Submit</button>
                    </form><br>
                    <a  class="btn btn-outline-danger" href="/cookings">Back to homepage</a>
           
            </div>
     </div>
    

        
</div>

<% include ../partials/footer%>

