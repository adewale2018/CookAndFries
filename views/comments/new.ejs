<% include ../partials/header%>
<br>
<div class="container">
        <h1 class="mt-5 text-center">Add New Comment To: <%= cooking.title.toUpperCase() %></h1>
    <div class="row">
           
            <div style="width:50%" class="my-3 mx-auto">
                    <form action="/cookings/<%=cooking._id%>/comments" method="POST">
                        <div class="form-group">
                            <label for="text">Text:</label>
                            <input class="form-control" id="text" type="text" name="comment[text]" placeholder="Comment goes here" required>
                        </div>
                       
                        
                        
                        <button class="btn btn-secondary btn-block">Submit</button>
                    </form>
                    <a  class="btn btn-outline-warning" href="/cookings">Back</a>
           
            </div>
     </div>
    

        
</div>

